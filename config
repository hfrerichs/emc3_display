# base directory with all simulation results (relative to $HOME)
export sim_dir=modeling/edge_transport

# within $sim_dir, a directory structure MACHINE/SHOT/CASE/RUN is assumed,
# where MACHINE/SHOT determines the magnetic configuration, i.e. grid data
# is expexted in $sim_dir/MACHINE/SHOT/$geometry_dir
export geometry_dir=geometry

# name of grid layout file (e.g. input.geo, ...)
#export grid_info_file=grid.info
export grid_info_file=input.geo

# name of file with grid nodes (e.g. GRID_3D_DATA, ...)
#export grid_data_file=grid.data
export grid_data_file=grid3D.dat

# name of file with plasma cell definitions (e.g. CELL_GEO, ...)
export physical_cell_data_file=physical_cell.data

export flux_conserv_file=flux_conservation


# for each simulation case, a run-directory with input file(s) is expected
# in $sim_dir/MACHINE/SHOT/CASE/$run_exec_dir:
export run_exec_dir=run
export case_info_file=input.par


# for each simulation run ($sim_dir/MACHINE/SHOT/CASE/RUN), output files are
# expected to be in sub-directories:
export emc3_output_dir=EMC3_OUTPUT
export eirene_output_dir=EIRENE_OUTPUT
export postproc_dir=POST_PROC
export diagnostics_dir=DIAGNOSTICS
